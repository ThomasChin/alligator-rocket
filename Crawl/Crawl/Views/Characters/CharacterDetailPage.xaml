<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crawl.Views.CharacterDetailPage"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Clicked="Edit_Clicked" />
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout 
            x:Name="DetailsRoot"
            Orientation="Vertical"
            Spacing="20"
            Padding="15">

            <Label  Text="Characters Detail Page" 
                    TextColor="Teal"
                    FontAttributes="Bold"
                    FontSize="Medium" />

            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
                <Label Text="Name : " 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
                <Label Text="{Binding Data.Name}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
            </StackLayout>

			<StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
				<Label Text="Class : " 
                   FontSize="Small" 
                   HorizontalOptions="Start"
                   TextColor="Teal"
                    />
				<Label Text="{Binding Data.Type}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
			</StackLayout>

			<StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
				<Label Text="Max Health : " 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
				<Label Text="{Binding Data.Attribute.MaxHealth}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
			</StackLayout>

			<StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
				<Label Text="Attack : " 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
				<Label Text="{Binding Data.Attribute.Attack}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
			</StackLayout>

			<StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
				<Label Text="Defense : " 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
				<Label Text="{Binding Data.Attribute.Defense}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
			</StackLayout>

			<StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
				<Label Text="Speed : " 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
				<Label Text="{Binding Data.Attribute.Speed}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
			</StackLayout>

			<StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
				<Label Text="Level : " 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
				<Label Text="{Binding Data.Level}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
			</StackLayout>

			<StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
				<Label Text="EXP : " 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
				<Label Text="{Binding Data.ExperienceTotal}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
			</StackLayout>
            
            <Label Text="Items:"
                   TextColor="Teal"
               FontAttributes="Bold"
               FontSize="Small" 
               HorizontalOptions="Start"/>
            
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
                <Label Text="Head : " 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
                <Label Text="{Binding Data.Head}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
            </StackLayout>
            
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
                <Label Text="Feet: " 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
                <Label Text="{Binding Data.Feet}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
            </StackLayout>
            
            
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
                <Label Text="Necklace : " 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
                <Label Text="{Binding Data.Necklass}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
            </StackLayout>
            
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
                <Label Text="Primary Fin :" 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
                <Label Text="{Binding Data.PrimaryHand}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
            </StackLayout>
            
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
                <Label Text="Off Fin :" 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
                <Label Text="{Binding Data.OffHand}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
            </StackLayout>
            
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
                <Label Text="Right Ring :" 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
                <Label Text="{Binding Data.RightFinger}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
            </StackLayout>
            
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
                <Label Text="Left Ring :" 
                       TextColor="Teal"
                   FontSize="Small" 
                   HorizontalOptions="Start"/>
                <Label Text="{Binding Data.LeftFinger}" 
                    FontSize="Small" 
                    HorizontalOptions="Center"/>
            </StackLayout>
		</StackLayout>
    </ScrollView>
</ContentPage>
