<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crawl.Views.AboutPage"
             xmlns:vm="clr-namespace:Crawl.ViewModels;"
             xmlns:documents="clr-namespace:Windows.UI.Xaml.Documents;assembly=Windows.Foundation.UniversalApiContract"
             Title="Horn Wars">

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout 
            VerticalOptions="StartAndExpand"
            HorizontalOptions="CenterAndExpand" 
            Orientation="Vertical">

            <StackLayout 
            HorizontalOptions="CenterAndExpand" 
            VerticalOptions="StartAndExpand"
            Orientation="Vertical">

                <Image 
                Source="https://media.istockphoto.com/vectors/friendly-narwhal-vector-id174160137" 
                VerticalOptions="Center" 
                HeightRequest="150"
                HorizontalOptions="Fill"/>

                <Label 
                    FontSize="Large"
                    Text="Horn Wars"
                    TextColor="Teal"
                    VerticalOptions="Center" 
                    HorizontalOptions="CenterAndExpand" />
            </StackLayout>
                
            <!--Battle-->
            <StackLayout>
                <Button  
                    Text="Auto Battle" 
                    Clicked="AutoBattle_Clicked"
                    HorizontalOptions="Fill"
                    TextColor="Black" />
                
                <Button  
                    Text="Manual Battle" 
                    Clicked="ManualBattle_Clicked"
                    HorizontalOptions="Fill"
                    TextColor="Black" />
            </StackLayout>
                
            <!--Database Settings-->
            <StackLayout
                    x:Name="DatabaseSettingsFrame"
                    IsVisible="True"
                    BackgroundColor="Teal">


                    <StackLayout 
                        VerticalOptions="StartAndExpand"
                        HorizontalOptions="FillAndExpand" 
                        Orientation="Vertical">

                        <StackLayout
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Start"
                            Orientation="Horizontal">

                                <Label 
                                    FontSize="Small"
                                    Text="Use Mock DataStore"
                                    HorizontalTextAlignment="Start"
                                    HorizontalOptions="StartAndExpand"/>

                                <Switch 
                                    x:Name="UseMockDataSource"
                                    HorizontalOptions="EndAndExpand"
                                    Toggled="UseMockDataSourceSwitch_OnToggled"
                                    IsToggled="False"/>
                        </StackLayout>
                        
                        <StackLayout
                                HorizontalOptions="FillAndExpand"
                                Orientation="Horizontal">

                            <Label 
                                FontSize="Small"
                                Text="Clear Database"
                                HorizontalTextAlignment="Start"
                                HorizontalOptions="Start"/>

                            <Button  
                                Text="Clear" 
                                Clicked="ClearDatabase_Command" 
                                HorizontalOptions="Fill"
                                TextColor="Black" />
                        </StackLayout>

